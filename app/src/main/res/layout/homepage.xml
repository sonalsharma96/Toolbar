<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <include layout="@layout/toolbar"
        android:id="@+id/bar"></include>

    <Button
        android:onClick="database"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:text="database"
        android:id="@+id/database"
        android:layout_weight="0.19"
        android:layout_below="@+id/bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp" />

    <Button
        android:onClick="camera"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:text="camera"
        android:id="@+id/camera"
        android:layout_weight="0.19"
        android:layout_alignBottom="@+id/database"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <Button
        android:text="Button"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:id="@+id/button2"


        android:layout_alignBottom="@+id/button"
        android:layout_alignLeft="@+id/camera"
        android:layout_alignStart="@+id/camera" />

    <Button
        android:text="Button"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginTop="70dp"
        android:id="@+id/button"
        android:layout_below="@+id/database"
        android:layout_alignLeft="@+id/database"
        android:layout_alignStart="@+id/database" />

</RelativeLayout>